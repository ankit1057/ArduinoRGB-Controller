<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:defaultValue="192.168.0.1"
        android:summary="The address of the server"
        android:inputType="textCapWords"
        android:key="server_addr"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Server Address" />
    
    <EditTextPreference
        android:defaultValue="2000"
        android:summary="The port of the server"
        android:inputType="textCapWords"
        android:key="server_port"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Server Port" />
</PreferenceScreen>